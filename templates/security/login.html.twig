{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block page_title %}Connexion{% endblock %}

{% block body %}
    <body>
        <div class="login-box">
            <div class="login-logo">
                <h1 class="h3 mb-3 font-weight-normal">Connexion Election Système</h1>
            </div>
            <div class="login-box-body">
                <p class="login-box-msg">Gérer le système en vous connectant</p>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group has-feedback">
                        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" placeholder="Email / Pseudo" required autofocus>
                        <span class="fa fa-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                        <span class="fa fa-lock form-control-feedback"></span>
                    </div>

                    <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}">

                    <div class="row">
                        <div class="col-xs-12" style="margin-left: 35%">
                            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
{% endblock %}
